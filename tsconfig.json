{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
