{
  "compilerOptions": {
    "outDir": "../../../dist",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "baseUrl": ".",
    "paths": {
      "@srcV/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}